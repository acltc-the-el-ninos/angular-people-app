<div ng-app="app">
  <div ng-controller="peopleCtrl" ng-init="setup()">
    <h1>Interesting People ({{ people.length }})</h1>
  
    <div>
    
      <ul>
        <li ng-repeat="error in errors">{{ error }}</li>
      </ul>

      <div>
        <label>Name: </label>
        <input type="text" ng-model="newPersonName">
      </div>
      <div>
        <label>Bio: </label>
        <input type="text" ng-model="newPersonBio">
      </div>
      <div>
        <button ng-click="addPerson(newPersonName, newPersonBio)">Add person</button>
      </div>
    </div>

    <div>
      <label>Name Filter:</label>
      <input ng-model="nameFilter">
    </div>
    <button ng-click="sortBy('name')">Order by name</button>
    <button ng-click="sortBy('bio')">Order by bio</button>
    <div ng-repeat="person in people | filter: {name: nameFilter} | orderBy: sortAttribute : sortDescending">
      <h2 ng-click="toggleBio(person)">{{ person.name }}</h2>
      <p ng-class="{strike: !person.bioVisible}">{{ person.bio }}</p>
      <a ng-click="deletePerson(person)" href="#">Delete</a>
    </div>
  </div>
</div>