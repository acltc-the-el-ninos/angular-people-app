<div ng-app="app">
  <div ng-controller="peopleCtrl" ng-init="setup()">
    <h1>Interesting People ({{ people.length }})</h1>
  
    <div>
    
      <ul>
        <li ng-repeat="error in errors">{{ error }}</li>
      </ul>

      <div>
        <label>Name: </label>
        <input type="text" ng-model="newPersonName">
      </div>
      <div>
        <label>Bio: </label>
        <input type="text" ng-model="newPersonBio">
      </div>
      <div>
        <button ng-click="addPerson(newPersonName, newPersonBio)">Add person</button>
      </div>
    </div>

    <div ng-repeat="person in people">
      <h2 ng-click="toggleBio(person)">{{ person.name }}</h2>
      <p ng-class="{strike: !person.bioVisible}">{{ person.bio }}</p>
      <a ng-click="deletePerson($index)" href="#">Delete</a>
    </div>
  </div>
</div>